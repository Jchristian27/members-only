<% if user_signed_in?%>
  <div class="container top">
    <div class="row">
      <div class="col">
        <h1>All Posts</h1>
      </div>
      <div class="col text-end">
        <%= link_to "Create New Post", new_post_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container-fluid hero">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h1>Welcome To Members Only!</h1><br>
        <h4>
          This is a project I am doing for The Odin Project's Ruby on Rails course to
          practice working with the Devise gem for authentication and authorizaiton.
        </h4><br>
        <%= link_to "Sign Up Now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>
  <br>
  <hr class="my-4"> <!-- Thin gray line -->
  <br>
<% end %>
<div class="container">
  <% @posts.each do |post| %>
    <%= link_to post, class: "no-link-style" do %>
      <div class="card bg-light mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.content %></p>
          <% if user_signed_in? %>
            <p class="card-text">Author: <%= post.user.name %></p>
          <% end %>
        </div>
      </div>
      <br>
    <% end %>
  <% end %>
</div>
